#!/bin/sh
set -e

#!/bin/sh
set -e

source ./globals

STAGING_DIR="$(mktemp -d)"

echo "Packaging compiled BusyBox"

# Queremos que dentro del zip exista: busybox/...
mkdir -p "$STAGING_DIR/busybox"
cp -a "$BUSYBOX_SOURCES_DIR/." "$STAGING_DIR/busybox/"

(
  cd "$STAGING_DIR"
  zip -r busybox.zip busybox
)

mv "$STAGING_DIR/busybox.zip" "$BUSYBOX_SOURCES_DIR/busybox.zip"
rm -rf "$STAGING_DIR"

mv "$BUSYBOX_SOURCES_DIR/busybox.zip" "$BUSYBOX_COMPILED_DIR/"
