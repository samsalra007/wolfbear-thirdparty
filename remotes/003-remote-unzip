a#! /bin/sh

source ./globals

echo "Unpackaging Wolfbear OS output directory in remote repository"

ssh -i "$WOLFBEAR_REPO_CERT" wolfbear@wolfbear.mx <<ENDSSH
    set -eux

    echo "Remote user:"
    whoami

    echo "Attemping to reach directory $WOLFBEAR_REPO_WWW"
    cd "$WOLFBEAR_REPO_WWW"

    unzip -o "$WOLFBEAR_OUTPUT_ZIP_NAME"

    echo "Cleaning up zip file"
    rm $WOLFBEAR_OUTPUT_ZIP_NAME
ENDSSH

echo "Wolfbear OS output directory has been unpackaged successfully in remote repository."